<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>PetOrg</title>
    <link rel="icon" href="<%= assetPath('logo.png') %>">
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header>
      <div class="nav_bar">

        <div class="header_spacing" >

        </div>
        <div class="logo_c">
          <a class="link" href="<%= rootPath %>">
            <img class="logo" src="<%= assetPath('logo.png') %>" alt="Logo PetOrg">
          </a>
          <a class="link" href="<%= rootPath %>">
            <h1>PetOrg</h1>
          </a>
        </div>

        <div class="login">
          <% if (locals.currentUser) { %>
            <small>Hola <%= currentUser.email %></small>
            <form id="logout" action="<%= destroySessionPath %>" method="post">
              <div class="button_panel">
                <input type="hidden" name="_method" value="delete" />
                <input type="submit" value="Log out"/>
              </div>
            </form>
          <% } else if (locals.currentCoordinator) { %>
            <small>Hola <%= currentCoordinator.email %></small>
            <form id="logout" action="<%= destroySessionPath %>" method="post">
              <div class="button_panel">
                <input type="hidden" name="_method" value="delete" />
                <input type="submit" value="Log out"/>
              </div>
            </form>
          <% } else { %>
              <div class="button_panel">
                <button>
                  <a class="link" href="<%= newSessionPath %>">Login</a>
                </button>
                <button>
                  <a class="link" href="<%= newUserPath %>">Registrarse</a>
                </button>
              </div>
          <% } %>
        </div>
      </div>
    </header>
    <div id="toggleContainer" data-paths="<%= paths %>">
    </div>
    <div id="fact_display">
    </div>
    <main>
      <%- body %>
    </main>
    <script src="<%= assetPath('app.js') %>"></script>

    <footer>
      <a class="link" href="https://github.com/IIC2513-2020-2/grupo-dellabs">
        <i class="fa fa-instagram fa-lg"></i>
      </a>
      <a class="link" href="https://github.com/IIC2513-2020-2/grupo-dellabs">
        <i class="fa fa-facebook-square fa-lg"></i>
      </a>
      <a class="link" href="https://github.com/IIC2513-2020-2/grupo-dellabs">
        <i class="fa fa-github-square fa-lg"></i>
      </a>
    </footer>
  </body>
</html>

