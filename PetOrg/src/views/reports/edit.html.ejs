<div class="edit_c">
    <h1>Editar Reporte</h1>

    <form class="form" method="post" action="<%= updateReportPath %>">
    <%- include('_form') %>

        <% let dateMsg = report.date.toString() %>
        <% if (dateMsg.length > 10) {%>
            <% dateMsg = report.date.toString().substr(0, report.date.toString().indexOf(' ')) %>
        <% } %>
        <div clas="field">
            <input type="hidden" id="date" name="date" value="<%= dateMsg %>"/>
        </div>

        <div class="actions">
            <input type="submit" value="Actualizar" />
        </div>
    </form>
</div>
