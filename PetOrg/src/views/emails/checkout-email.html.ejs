<div
style='
    border: 4px solid #FFB793;
    border-radius: 5px;
    padding: 0px 20px 10px;
    max-width: 800px;
    margin: 20px auto;
    font-family: Arial, Helvetica, sans-serif
'>
    <h2>Gracias <%= user.name %> por Comprar en PetOrg</h2>
    <h3>Resumen:</h3>
    <ul>
        <li><%= amount %> unidades de <%= product.name %> ($<%= product.price %>) </li>
    </ul>
    <p><b>Total:</b> <%= product.price * parseInt(amount) %></p>

    <a href="http://pet-org.herokuapp.com/"
    style='
        color: white;
        text-decoration: none;
    '>
        <div
        style='
            background-color: #FFB793;
            width:100px;
            text-align: center;
            padding: 5px;
            border-radius:5px;
            margin-left: 40px;
        '>
            PetOrg
        </div>
    </a>
</div>