<div class="edit_c">
    <h1>Editar Noticia</h1>

    <form class="form" method="post" action="<%= updateNewsitemPath %>" enctype="multipart/form-data">
    <%- include('_form') %>

        <div clas="field">
            <% let dateMsg = newsitem.date.toString() %>
            <% if (dateMsg.length > 10) {%>
                <% dateMsg = newsitem.date.toString().substr(0, newsitem.date.toString().indexOf(' ')) %>
            <% } %>
            <label for="date">Fecha</label>
            <input type="date" placeholder="yyyy-mm-dd" id="date" name="date" value="<%= dateMsg %>"/>
        </div>

        <div class="field">
            <label for="coordinator">Coordinador</label>
            <select id="coordinator" name="coordinatorId">
                <% coordinators.forEach((coordinator) => { %>
                <option value="<%=coordinator.id%>" <%= coordinator.id === newsitem.coordinatorId ? 'selected' : '' %>><%=coordinator.name%></option>
                <% }) %>
            </select>
        </div>

        <div class="actions">
            <input type="submit" value="Actualizar" />
        </div>
    </form>
</div>
